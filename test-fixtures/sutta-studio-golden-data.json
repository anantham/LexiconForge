        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:1.3" },
        "order": 4,
        "pali": "Tatra kho bhagavā bhikkhū āmantesi:",
        "baseEnglish": "There the Buddha addressed the bhikkhus:"
      },
      {
        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:1.4" },
        "order": 5,
        "pali": "\"bhikkhavo\"ti.",
        "baseEnglish": "\"Bhikkhus!\""
      },
      {
        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:1.5" },
        "order": 6,
        "pali": "\"Bhadante\"ti te bhikkhū bhagavato paccassosuṁ.",
        "baseEnglish": "\"Venerable sir,\" they replied."
      },
      {
        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:1.6" },
        "order": 7,
        "pali": "Bhagavā etadavoca:",
        "baseEnglish": "The Buddha said this:"
      },
      {
        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:2.1" },
        "order": 8,
        "pali": "\"Ekāyano ayaṁ, bhikkhave, maggo sattānaṁ visuddhiyā,",
        "baseEnglish": "\"Bhikkhus, this is the direct path for the purification of beings,"
      },
      {
        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:2.2" },
        "order": 9,
        "pali": "sokaparidevānaṁ samatikkamāya,",
        "baseEnglish": "for the overcoming of grief and lamentation,"
      },
      {
        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:2.3" },
        "order": 10,
        "pali": "dukkhadomanassānaṁ atthaṅgamāya,",
        "baseEnglish": "for the ending of pain and sadness,"
      },
      {
        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:2.4" },
        "order": 11,
        "pali": "ñāyassa adhigamāya,",
        "baseEnglish": "for the attainment of the true method,"
      },
      {
        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:2.5" },
        "order": 12,
        "pali": "nibbānassa sacchikiriyāya,",
        "baseEnglish": "for the realization of Nibbāna,"
      },
      {
        "ref": { "provider": "suttacentral", "workId": "mn10", "segmentId": "mn10:2.6" },
        "order": 13,
        "pali": "yadidaṁ—cattāro satipaṭṭhānā.",
        "baseEnglish": "namely, the four kinds of mindfulness meditation."
      }
